FROM ubuntu:latest

WORKDIR /app
ADD . /app

RUN apt-get update && apt-get upgrade -y && \
        apt-get install -y python3 python3-setuptools python3-pip

RUN pip3 install --no-cache-dir gevent && python3 setup.py install

RUN apt-get purge -y python3-pip && \
        apt-get clean -y && \
        apt-get autoremove -y &&\
        rm -rf /var/lib/apt/lists/* && \
        rm -rf /app/*



